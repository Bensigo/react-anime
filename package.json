{
  "name": "react-anime",
  "version": "0.1.7",
  "description": "(ﾉ´ヮ´)ﾉ*:･ﾟ✧ A super easy animation library for React.",
  "main": "dist/anime.min.js",
  "browser": "dist/anime.browser.js",
  "typescript": {
    "definition": "src/Anime.d.ts"
  },
  "scripts": {
    "build:develop": "cross-env NODE_ENV=development webpack src/anime.js dist/anime.js",
    "build:production": "cross-env NODE_ENV=production webpack src/anime.js dist/anime.min.js",
    "build:publish": "npm run build:develop && npm run build:production",
    "build:cdn": "cross-env NODE_ENV=production webpack --config webpack.browser.js src/anime.js dist/anime.browser.js",
    "test": "jest --coverage",
    "coverage": "jest && codecov",
    "test:watch": "jest --converage --watch"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alaingalvan/react-anime.git"
  },
  "keywords": [
    "animation",
    "anime",
    "react",
    "motion",
    "transition",
    "tween",
    "component"
  ],
  "author": "Alain Galvan",
  "contributors": [
    {
      "name": "Kennet Postigo",
      "email": "kennetfpostigo@gmail.com",
      "url": "http://stelatech.com/"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alaingalvan/react-anime/issues"
  },
  "homepage": "https://github.com/alaingalvan/react-anime#readme",
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-jest": "15.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-syntax-jsx": "6.13.0",
    "babel-plugin-transform-class-properties": "6.11.5",
    "babel-plugin-transform-flow-strip-types": "6.14.0",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "codecov": "1.0.1",
    "coveralls": "2.11.12",
    "cross-env": "2.0.1",
    "eslint": "3.4.0",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-react": "6.2.0",
    "flow-bin": "0.32.0",
    "jest": "^15.1.1",
    "react-test-renderer": "15.3.1",
    "webpack": "^2.1.0-beta.22"
  },
  "peerDependencies": {
    "animejs": "^1.1.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  }
}